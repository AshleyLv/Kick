/**index.wxss**/

.row {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.userinfo-avatar {
  width: 64rpx;
  height: 64rpx;
  margin: 20rpx 20rpx 5rpx 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
  font-size: 10px;
  max-width: 100rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin: 0 20rpx;
}

.control {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.control .btn {
  font-size: 14px;
  color: #fff;
  text-align: center;
  margin-left: 20rpx;
}

.startButton {
  width: 150rpx;
  background-color: #ef943b;
}

.resetButton {
  width: 150rpx;
  background-color: #6d6663;
}

.time {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.time .group {
  margin-bottom: 20rpx;
}

.time .label {
  color: #fff;
  font-size: 20px;
  margin-right: 10rpx;
}

.time .number {
  color: #fff;
  font-size: 24px;
  font-weight: bold;
}

.status-circle {
  position: relative;
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 10rpx auto;
  background-color: #fcf9e6;
}

.status-circle .inner-circle {
  width: 340rpx;
  height: 340rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  font-size: 32px;
  line-height: 340rpx;
  text-align: center;
  color: #8a8a8a;
  margin-left: -170rpx;
  margin-top: -170rpx;
  border-radius: 50%;
  background-color: #fcf9e6;
  box-shadow: 0 0 6px rgba(249, 131, 0, 0.46);
  z-index: 100;
}

.status-circle .inner-circle image {
  width: 240rpx;
  height: 280rpx;
  margin-top: 30rpx;
}

.status-circle .sector {
  position: absolute;
  top: 0;
  left: 50%;
  width: 0;
  height: 0;
  border: 200rpx solid transparent;
  border-left-width: 54.58994rpx;
  border-right-width: 54.58994rpx;
  border-top-color: #8aebdc;
}

.status-circle .sector:nth-child(1) {
  transform: translate(-50%, 0) rotate(15deg);
  transform-origin: center;
}

.container .sector:nth-child(2) {
  transform: translate(-50%, 0) rotate(45deg);
  transform-origin: center;
}

.container .sector:nth-child(3) {
  transform: translate(-50%, 0) rotate(75deg);
  transform-origin: center;
}

.container .sector:nth-child(4) {
  transform: translate(-50%, 0) rotate(105deg);
  transform-origin: center;
}

.container .sector:nth-child(5) {
  transform: translate(-50%, 0) rotate(135deg);
  transform-origin: center;
}

.container .sector:nth-child(6) {
  transform: translate(-50%, 0) rotate(165deg);
  transform-origin: center;
}

.container .sector:nth-child(7) {
  transform: translate(-50%, 0) rotate(195deg);
  transform-origin: center;
}

.container .sector:nth-child(8) {
  transform: translate(-50%, 0) rotate(225deg);
  transform-origin: center;
}

.container .sector:nth-child(9) {
  transform: translate(-50%, 0) rotate(255deg);
  transform-origin: center;
}

.container .sector:nth-child(10) {
  transform: translate(-50%, 0) rotate(285deg);
  transform-origin: center;
}

.container .sector:nth-child(11) {
  transform: translate(-50%, 0) rotate(315deg);
  transform-origin: center;
}

.container .sector:nth-child(12) {
  transform: translate(-50%, 0) rotate(345deg);
  transform-origin: center;
}

.container .sector.light {
  border-top-color: #32c5d2 !important;
}

.container .sector.middle {
  border-top-color: #f89406 !important;
}

.container .sector.heavy {
  border-top-color: #f35674 !important;
}

.info {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  color: #fff;
}

.kicks-number {
  font-size: 60px;
  line-height: 20px;
  font-weight: bolder;
  padding: 0 10rpx;
}

.adder {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  position: relative;
}

.adder-btn-group .foot-image {
  width: 66rpx;
  height: 80rpx;
  position: absolute;
  left: 80rpx;
  top: 20rpx;

}

.adder-btn {
  width: 392rpx;
  height: 135rpx;
  background-color: #ef943b;
  color: #fff;
  font-size: 40px;
  line-height: 64px;
  text-align: center;
  vertical-align: middle;
  padding-left: 80px;
  border: 2px solid #e08c38;
}

.adder-btn-group:active .adder-btn {
  background-color: #e08c38;
}

.reverse-adder-btn {
  position: absolute;
  right: 50rpx;
  top: 20rpx;
  width: 90rpx;
  height: 90rpx;
  font-size: 8px;
  line-height: 10px;
  background-color: #d8d7d6;
  color: #fff;
  text-align: center;
  vertical-align: middle;
  border-radius: 50%;
}

.reverse-adder-btn:active {
  background-color: #a8a7a6;
}
.reverse-image{
  width:90rpx;
  height:90rpx;
  left:0;
  position:absolute;

}