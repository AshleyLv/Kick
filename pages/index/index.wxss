/**index.wxss**/

.row {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.userinfo-avatar {
  width: 64rpx;
  height: 64rpx;
  margin: 20rpx 20rpx 5rpx 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
  font-size: 10px;
  max-width: 100rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin: 0 20rpx;
}

.control {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.control .btn {
  font-size: 14px;
  color: #fff;
  text-align: center;
  margin-left: 20rpx;
}

.startButton {
  width: 150rpx;
  background-color: #ef943b;
}

.resetButton {
  width: 150rpx;
  background-color: #6d6663;
}

.time {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.time .group {
  margin-bottom: 20rpx;
}

.time .label {
  color: #fff;
  font-size: 20px;
  margin-right: 10rpx;
}

.time .number {
  color: #fff;
  font-size: 24px;
  font-weight: bold;
}

.status-circle {
  width: 400rpx;
  height: 400rpx;
  margin: 10rpx auto 0;
  background: #fcf9e6;
  border-radius: 50%;
}
